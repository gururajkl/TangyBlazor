<input class="form-control" @attributes="InputAttributesWithCapture" />

@code {
    [Parameter]
    public string Placehlder { get; set; } = "Initial Placeholder";

    [Parameter]
    public string? MaxLength { get; set; }

    // Attribute splatting.
    [Parameter]
    public Dictionary<string, object> InputAttributes { get; set; } = new()
    {
        { "placeholder", "Initial Placeholder" },
